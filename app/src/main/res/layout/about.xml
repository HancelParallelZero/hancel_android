<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv_about"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logoHancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/content_description_welcome"
                android:src="@drawable/logo_57x57" />

            <TextView
                android:id="@+id/tv_welcome_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/app_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/text_default"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/AboutText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="5sp"
                android:text="@string/about_licence"
                android:textColor="@color/text_contrast"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/basedTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/about_based_title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_contrast"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/logoLp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/content_description_welcome"
                android:paddingTop="10sp"
                android:src="@drawable/logo_linphone_57x57" />

            <TextView
                android:id="@+id/AboutLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:gravity="center"
                android:text="@string/about_based_link"
                android:textColor="@color/text_contrast"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textColaboration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/about_text_colaboration"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_default"
                android:textSize="15sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logoFlip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/content_description_welcome"
                    android:src="@drawable/ong_3" />

                <ImageView
                    android:id="@+id/logoKarisma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/content_description_welcome"
                    android:paddingTop="15sp"
                    android:src="@drawable/karisma" />

            </LinearLayout>

            <TextView
                android:id="@+id/surveyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/about_survey_title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_default"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/AboutSurvey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:gravity="center"
                android:textSize="12sp"
                android:text="@string/about_survey_link"
                android:textColor="@color/text_contrast"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/image_credits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/image_credits"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_default"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/imageCreditsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:gravity="center_horizontal"
                android:lines="15"
                android:padding="15dp"
                android:text="@string/image_credits_value"
                android:textColor="@color/text_contrast"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>