<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_rings_header"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:background="@color/mainBackground"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/iv_ring_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_ring_logo" />

        <TextView
            android:id="@+id/tv_rings_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/iv_ring_logo"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:lines="3"
            android:text="@string/msg_ring_help"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_rings_desc_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:lines="1"
            android:text="@string/msg_ring_desc_hint"
            android:textColor="@android:color/white"
            android:textSize="12sp" />


    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_rings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_rings_header"
        android:layout_marginTop="10dp"
        android:elevation="5dp"
        android:gravity="center"
        android:visibility="gone" />





</RelativeLayout>